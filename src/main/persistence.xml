<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
  version="2.0">

  <persistence-unit name="nome_da_unidade_de_persistencia" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>com.myfinances.models.Users</class>
    <class>com.myfinances.models.Accounts</class>
    <class>com.myfinances.models.Categories</class>
    <class>com.myfinances.models.Transactios</class>

    <properties>
      <property name="javax.persistence.jdbc.driver" value="nome_do_driver_do_banco_de_dados" />
      <property name="javax.persistence.jdbc.url" value="url_do_banco_de_dados" />
      <property name="javax.persistence.jdbc.user" value="usuario_do_banco_de_dados" />
      <property name="javax.persistence.jdbc.password" value="senha_do_banco_de_dados" />
    </properties>
  </persistence-unit>

</persistence>

